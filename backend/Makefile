tests:
	poetry run pytest --cov=. --cov-branch tests/
	poetry run coverage html

typecheck:
	poetry run mypy src/ tests/

lintcheck:
	poetry run black --check .
	poetry run isort -c .
	poetry run flake8 .

lint:
	poetry run black .
	poetry run isort .
	poetry run flake8 .

schema:
	mkdir -p ../data
	# SQLite trigrams are new and Github Actions' ubuntu doesn't have them.
	# We patched yoyo in the application but the command line tool isn't patched.
	# So just invoke the application instead for now.
	# poetry run yoyo apply --batch
	poetry run repertoire
	printf -- "-- This file is for documentation purposes only.\n" > schema.sql
	printf -- "-- It is autogenerated from the migrations, please do NOT edit!\n\n" >> schema.sql
	sqlite3 ../data/db.sqlite3 .schema | tail -n +5 | awk '{if (NR>1) gsub(/^CREATE/, "\nCREATE")}1' >> schema.sql

docs:
	rm -rf ../docs/_build/html ../docs/_build/doctrees
	poetry run sphinx-build -M html ../docs ../docs/_build

setupfiles:
	poetry export -f requirements.txt -o requirements.txt
	poetry run dephell deps convert --from pyproject.toml --to setup.py

.PHONY: tests typecheck lintcheck lint schema docs setupfiles setupcheck
